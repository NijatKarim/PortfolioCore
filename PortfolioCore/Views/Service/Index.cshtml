@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int counter = 1;
}

<h1>My Services</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Service Title</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@counter</td>
            <td>@item.ServiceTitle</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">Update</a></td>
        </tr>
        counter++;
    }
</table>
<a href="/Service/AddService/" class="btn btn-primary">Add New Service</a>
