@model List<Portfolio>
<div class="row gy-4 isotope-container" data-aos="fade-up" data-aos-delay="200">
    @foreach(var x in Model){
    <div class="col-lg-4 col-md-6 portfolio-item isotope-item filter-@x.CategoryId">
        <img src="@x.ImageUrl" class="img-fluid" alt="">
        <div class="portfolio-info">
                <div class="card-body">
                    <h5 class="card-title">@x.Title</h5> <!-- 🎯 This is your Card Title -->
                    <p class="card-text">@x.Description</p>
                </div>
            <a href="@x.ImageUrl" title="App 1" data-gallery="portfolio-gallery-@x.CategoryId" class="glightbox preview-link"><i class="bi bi-zoom-in"></i></a>

        </div>
    </div><!-- End Portfolio Item -->
    }

</div><!-- End Portfolio Container -->


