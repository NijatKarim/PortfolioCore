@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>UpdateSkill</h1>

<form method="post">
    <input type="hidden" asp-for="SkillId" />
    <label>Skill Name</label>
    <input type="text" asp-for="SkillName" class="form-control" />
    <br />
    <label>Skill Value</label>
    <input type="number" asp-for="SkillValue" class="form-control" />
    <br />
    <button class="btn btn-info">Yetenegi Guncelle</button>
</form>