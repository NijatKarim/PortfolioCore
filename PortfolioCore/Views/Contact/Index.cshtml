@model Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Contact Info</h1>

<form method="post">
    <div class="d-flex justify-content-end mb-3">
        <button type="submit" class="btn btn-primary">Update Education Info</button>
    </div>
    <input type="hidden" asp-for="ContactId" />

    <label>Contact Address</label>
    <input type="text" class="form-control" asp-for="ContactAddress" style="border:1px solid black;" />
    <br />
    <label>Phone number</label>
    <input type="text" class="form-control" asp-for="ContactPhonenumber" style="border:1px solid black;" />
    <br />
    <label>Email Address</label>
    <input type="email" class="form-control" asp-for="ContactEmail" style="border:1px solid black;" />
    <br />
    <label>Location (link) for map</label>
    <input type="text" class="form-control" asp-for="ContactLocation" style="border:1px solid black;" />
    <br />

    <button class="btn btn-primary">Update Contact Info</button>
</form>